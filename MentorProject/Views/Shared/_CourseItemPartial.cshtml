@using MentorProject.Models;
@model Course
<div class="col-lg-4 col-md-6 d-flex align-items-stretch" data-aos="zoom-in" data-aos-delay="100">
	<div class="course-item">
		<img src="~/assets/img/@Model.ImageName" class="img-fluid" alt="...">
		<div class="course-content">
			<div class="d-flex justify-content-between align-items-center mb-3">
				<p class="category">@Model.Category</p>
				<p class="price">$@Model.Price</p>
			</div>

			<h3><a href="course-details.html">@Model.Name</a></h3>
			<p class="description">@Model.Description</p>
			<div class="trainer d-flex justify-content-between align-items-center">
				<div class="trainer-profile d-flex align-items-center">
					<img src="~/@Model.Trainer.ImgUrl" class="img-fluid" alt="">
					<a href="" class="trainer-link">@Model.Trainer.Name</a>
				</div>
				<div class="trainer-rank d-flex align-items-center">
					<i class="bi bi-person user-icon"></i>&nbsp;50
					&nbsp;&nbsp;
					<i class="bi bi-heart heart-icon"></i>&nbsp;65
					<a asp-controller="Courses" asp-action="AddBasket" asp-route-courseid="@Model.Id"><i class="fa-solid fa-cart-plus m-2"></i>  </a>
				</div>
			</div>
		</div>
	</div>
</div>
