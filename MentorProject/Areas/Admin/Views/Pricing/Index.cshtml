@model List<Pricing>
@{
	ViewData["Title"] = "Index";
}

<div class="container-fluid pt-4 px-4">
	<div class="row g-4">
		<div class="col-sm-12 col-xl-12">
			<div class="bg-secondary rounded h-100 p-4">
				<a asp-area="Admin" asp-controller="Pricing" asp-action="Create" class="btn btn-primary" style="float:right">Create</a>
				<h6 class="mb-4">Hoverable Table</h6>
				<table class="table table-hover">
					<thead>
						<tr>
							<th scope="col">#</th>
							<th scope="col">Name</th>
							<th scope="col">Price</th>
							<th scope="col">IsAdvanced</th>
							<th scope="col">IsFeatured</th>
							<th scope="col">Actions</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<th scope="row">@item.Id</th>
								<td>@item.Name</td>
								<td>@item.Price.ToString("F2")</td>
								<td>@item.IsAdvanced</td>
								<td>@item.IsFeatured</td>
								<td>
									<a type="button" class="btn btn-success m-1">Details</a>
									<a asp-action="Edit" asp-route-id="@item.Id" type="button" class="btn btn-warning m-1">Edit</a>
									<a asp-action="Delete" asp-route-id="@item.Id" type="button" class="btn btn-primary m-1 delete-btn">Delete</a>
								</td>
							</tr>
						}
					</tbody>
				</table>

			</div>
		</div>
	</div>
</div>


